{
  "pluginAlias": "WledPreset",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Fill out required fields below and click \"SAVE\" to get started. See [README](https://github.com/goodshort/homebridge-wled-preset#readme) for more information.",
  "schema": {
    "type": "object",
    "properties": {
      "mDNS": {
        "title": "Use autodiscovery (beta)",
        "type": "boolean",
        "description": "Use mDNS to add/remove WLEDs controllers as they appear/disapear on the network (runs constantly)"
      },
      "wleds": {
        "type": "array",
        "title": "WLEDs",
        "condition": {
          "functionBody": "return model.mDNS === false;"
        },
        "items": {
          "type": "object",
          "title": "WLED device",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "default": "Led Strip",
              "required": true
            },
            "ip": {
              "title": "IP Address / Hostname",
              "type": "string",
              "placeholder": "Enter IP or hostname...",
              "required": true,
              "format": "hostname"
            },
            "presetsNb": {
              "title": "Number of presets configured",
              "type": "number",
              "placeholder": "Enter amount of presets",
              "default": "5",
              "required": true
            }
          }
        }
      }
    }
  }
}
